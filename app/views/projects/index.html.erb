<div class="row"> 
  <header>
  <h2>
    Projects
    <%= link_to "New Project", new_project_path, class: "btn btn-primary pull-right" %>
  </h2> 
</div>

<div class="row">
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Options</th>
    </tr>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td >
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-xs btn-success" %>
            <%= link_to "Show", project_path(project), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", project_path(project), data: {confirm: 'Are you sure, you want to delete this project?', commit: "Ok" }, method: :delete, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <h2>Project</h2>
</div>
<div class="row">
  <div class="col-md-6">  
    <div class="panel panel-primary">
      <div class="panel-heading"><%= @project.title %></div>
  
      <div class="panel-body">
        <strong>Project Desription:</strong>
        <br>
        <p><%= @project.description %></p>
      </div>
    </div>
    <hr>
    <h2>List of Tasks</h2>
    <hr>
    <div class="row">
      <div class="col-md-10 col-md-offset-1" id="tasks_list"> 
        
        <%= render @project.tasks %>
      </div>
    </div>
  </div>
  <div class="col-md-6">  
    <div class="row">
      <div class="col-md-10 col-md-offset-1" id="task_form">  
        <h4>Add New Task</h4>
        <%= render 'tasks/form' %>
      </div>
    </div>
    <hr>
  </div>
</div>
<hr>
<div class="row" id="links">
  <%= link_to "Back", root_path, class: "btn btn-default" %>
</div>
<hr>
<%= form_for(@task, url: project_task_path, remote: true) do |f| %>  
  <div class="panel-heading"><%= f.text_field :title %></div>

  <div class="panel-body">
    <strong>Task Desription:</strong>
    <br>
    <p><%= f.text_area :description%></p>
  </div>
  <div class="panel-footer">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
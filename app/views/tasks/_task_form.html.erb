<div class="panel panel-primary">
  <%= form_for(@task, url: project_task_path, remote: true) do |f| %>  
    <div class="panel-heading">
      Title: <%= f.text_field :title, id: 'edit_title' %> 
    </div>

    <div class="panel-body">
      <strong>Task Desription:</strong>
      <br>
      <p><%= f.text_area :description%></p>
      <p><%= f.label :deadline %>
      <%= f.date_select :deadline, class: 'form-control'  %></p>
    </div>
    <div class="panel-footer">
      <%= f.submit "Save", class: 'btn btn-success task_save' %>
    </div>
  <% end %>
</div>